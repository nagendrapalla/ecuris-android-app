<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#FFF"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="COMPLETE BLOOD PICTURE ( CBPP OR CBC)"
                android:textSize="17dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:text="Product Type : "
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/order_item_desc_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="right"
                android:text="LAB-TEST"
                android:textAllCaps="true"
                android:textAlignment="textEnd"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:text="Price : "
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/order_item_desc_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd"
                android:text="RS.700"
                android:textAllCaps="true"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="VENDOR : "
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/order_item_desc_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="ELBIT"
                android:textAlignment="textEnd"
                android:textAllCaps="true"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER STATUS : "
                android:textAlignment="viewStart"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/order_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW ORDER PLACED"
                android:textAlignment="textEnd"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/download_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D80000"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Reports"
                android:textColor="#FFF"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>