<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.stallats.ecuris.diagnostics.TestDescActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEE"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/package_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TEST NAME"
                        android:textAllCaps="true"
                        android:textColor="#444"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="12sp"
                        android:text="PRICE"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/actual_package_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="12sp"
                        android:paddingLeft="10dp"
                        android:text="TextView"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:typeface="normal" />


                    <TextView
                        android:id="@+id/final_package_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8sp"
                        android:paddingLeft="10dp"
                        android:text="TextView"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:elevation="2dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Description"
                            android:textAllCaps="true"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/package_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XXXX"
                            android:textColor="@color/colorAccent"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:elevation="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/individual_tests_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Test Included: 2"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textAllCaps="true"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/tests_list"
                            android:divider="#D1D1D1"
                            android:dividerHeight="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ListView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.9"
            android:background="#DDD">

            <Button
                android:id="@+id/package_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:elevation="2dp"
                android:text="add to cart"
                android:textColor="@color/com_facebook_button_background_color_focused"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
